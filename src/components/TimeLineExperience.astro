---
const { title, company, date, location } = Astro.props;
---

<div class="flex">
  <div class="education__time">
    <span class="w-4 h-4 bg-primary block rounded-full mt-1"></span>
    <span class="education__line bg-primary block h-full w-[2px] translate-x-[7px]"></span>
  </div>
  <div class="px-5">
      <h2 class="font-semibold mb-1 text-lg">{title} <span class="text-primary"> @ </span> <span>{company}</span></h2>
    <div class="flex flex-col">
      <span class="font-light text-sm">{date}</span>
      <span class="font-light text-sm">{location}</span>
    </div>
    <p class="my-2 text-justify text-sm mb-2">
      <slot />
    </p>
    <div class="p-4"></div>
  </div>
</div>
