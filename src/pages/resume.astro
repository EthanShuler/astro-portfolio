---
import BaseLayout from "../layouts/BaseLayout.astro";
import TimeLineExperience from "../components/TimeLineExperience.astro";
import TimeLineEducation from '@components/TimeLineEducation.astro';
import Skills from '@components/Skills.astro';

const experience = [
  {
    id: 0,
    company: "Gain Life",
    position: "Solutions Engineer",
    location: "remote",
    date: "August 2023 - Present",
    description: ["abc", "abc"],
  },
  {
    id: 1,
    company: "SKYGEN USA",
    location: 'Milwaukee, WI',
    position: "Software Engineer",
    date: "January 2020 - September 2021",
    description: [
      "Developed .NET Core MVC applications, using SQL for the database and C# for the APIs and views. Also developed a Blazor UI that showed test coverage accross the codebase",
      "Used Selenium and NUnit to write automated unit tests, UI tests and integration tests",
      "Participated in a SCRUM team",
      "Mentored a newly hired  engineer",
    ],
  },
  {
    id: 2,
    company: "Universtiy School of Milwaukee",
    location: 'Milwaukee, WI',
    position: "IT Support, Academic Technology",
    date: "August 2020 - February 2020",
    description: [
       "Provided IT support for faculty, staff, students, and parents",
    ],
  },
  {
    id: 3,
    company: "MakeMusic - Peaksware",
    location: 'Boulder, CO',
    position: "Software Engineer Intern",
    date: "Summer 2019",
    description: [
      "Fully migrated company appserver hosting from Windows to Linux, running eleven inter-communicating applications from one server, saving the company considerable costs in Windows licensing and maintenance",
      "Automated building and deployment of new servers for each push to production",
      "Extensive use of AWS EC2, AWS CloudFormation, Packer, Nginx, Systemd, git, Elasticsearch/Filebeat, SSL. Extensive exposure to Agile, DevOps",
      "Started project of migrating local app development to Docker containers",
    ],
  },
  {
    id: 4,
    company: "DirectSupply",
    location: 'Milwaukee, WI',
    position: "Software Engineer Intern",
    date: "Summer 2017",
    description: [
      "Developed database frontend for company servers using SQL and the Outsystems web platform",
    ],
  },
]

const education = [
  {
    id: 0,
    degree: "B.A. Computer Science",
    years: "2016-2020",
    school: "University of Colorado - Boulder",
    gpa: "4.0",
  },
  {
    id: 1,
    degree: "B.M. Bassoon Performance",
    years: "2016-2020",
    school: "University of Colorado - Boulder",
  },
  {
    id: 2,
    degree: "M.M. Bassoon Performance",
    years: "2021-2023",
    school: "University of Miami - Frost School of Music",
  },
]
---

<BaseLayout title="Resume" sideBarActiveItemID="resume">
  <div class="mb-5">
    <div class="text-4xl w-full font-bold">Skills</div>
  </div>
  <p class="mb-5">My skills, which I have either used professionally or extensively for personal/school projects. Hover to see more!</p>
  <Skills />

  <div class="mb-5">
    <div class="text-4xl w-full font-bold">Experience</div>
  </div>

  <div class="timeline timeline-vertical mb-10">
    {experience.map(e => 
      <TimeLineExperience
        title={e.position}
        company={e.company}
        date={e.date}
        location={e.location}
      >
      <ul>
        {e.description.map(d => <li class="list-disc">{d}</li>)}
      </ul>
      </TimeLineExperience>
    )}
  </div>

  <div class="mb-5">
    <div class="text-4xl w-full font-bold">Education</div>
  </div>

  <div class="timeline timeline-vertical grid gap-4 mb-10">
    {education.map(e =>
      <TimeLineEducation
        title={e.degree}
        years={e.years}
        school={e.school}
        gpa={e?.gpa}
      />)}
  </div>

  <div class="dropdown dropdown-hover dropdown-top">
    <div tabindex="0" role="button" class="btn m-1">Relevant Engineering Courses</div>
    <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-primary text-black rounded-box w-52">
      <li><a class="hover:bg-accent">Algorithms</a></li>
      <li><a class="hover:bg-accent">Software Development</a></li>
      <li><a class="hover:bg-accent">Database Systems</a></li>
      <li><a class="hover:bg-accent">Discrete Structures with Computer Applications</a></li>
      <li><a class="hover:bg-accent">Linear Algebra with Computer Applications</a></li>
      <li><a class="hover:bg-accent">Data Structures</a></li>
      <li><a class="hover:bg-accent">Computer Systems</a></li>
      <li><a class="hover:bg-accent">Principles of Programming Languages</a></li>
      <li><a class="hover:bg-accent">Cyber Security</a></li>
      <li><a class="hover:bg-accent">Dynamic Models of Biology</a></li>
      <li><a class="hover:bg-accent">Calculus I & II</a></li>
      <li><a class="hover:bg-accent">Computer Animation</a></li>
    </ul>
  </div>
</BaseLayout>
